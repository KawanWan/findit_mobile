<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app   ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_solicitacao_mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensagem do usuÃ¡rio"
            android:textColor="#000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_solicitacao_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: pendente"
            android:textColor="#0037FF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_solicitacao_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15/06/2025 18:00"
            android:textColor="#666"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>